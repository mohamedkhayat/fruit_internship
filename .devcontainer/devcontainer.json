{
    "name": "Fruit Internship Container",
    "build":{
        "dockerfile" : "Dockerfile",
        "context" : ".."
    },
     "runArgs": [
    "--gpus=all",
    "--ipc=host"
  ],
    "workspaceFolder": "/workspace",
    "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.cache/huggingface,target=/home/vscode/.cache/huggingface,type=bind,consistency=cached"
  ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "visualstudioexptteam.intellicode-api-usage-examples",
                "henrytsz.nvim",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "postCreateCommand": "pip install --upgrade pip && pip install -e '.[dev]' && pre-commit install",
    "remoteUser" : "root"

}
